<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragments.post.PostFragment">

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/postMessage_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="start|top"
        android:hint="post your sad story...."
        android:inputType="textMultiLine"
        android:maxLength="300"
        android:minLines="10"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postImage" />

    <ImageView
        android:id="@+id/addPhoto_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_feedback_addphoto"
        app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
        app:layout_constraintEnd_toEndOf="@+id/postMessage_et"
        app:layout_constraintTop_toBottomOf="@+id/postMessage_et" />

    <ImageView
        android:id="@+id/deletePhoto_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_feedback_highlightoff"
        app:srcCompat="@drawable/ic_baseline_highlight_off_24"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/postImage"
        app:layout_constraintTop_toTopOf="@+id/postImage" />


</androidx.constraintlayout.widget.ConstraintLayout>