<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <View
        android:id="@+id/placeholder_row_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/placeholder_row_user_name"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/placeholder_row_user_image"
        app:layout_constraintStart_toEndOf="@+id/placeholder_row_user_image"
        app:layout_constraintTop_toTopOf="@+id/placeholder_row_user_image" />

    <View
        android:id="@+id/placeholder_row_product_image"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_row_user_image" />

    <View
        android:id="@+id/placeholder_row_brand_name"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_row_product_image" />

</androidx.constraintlayout.widget.ConstraintLayout>